<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>
</head>
<body>
    
    <%- include('header'); %>

    <div class="container">

        <div class='row col-12 col-sm-8 mx-auto'>

            <h5 class="offset-2 mt-5">My tickets</h5>
            
            <div>

                    <table class="table table-borderless">
                        <thead>
                            <tr class="table-light">
                                <th scope="col">N°</th>
                                <th scope="col">Journey</th>
                                <th scope="col">Date</th>
                                <th scope="col">Departure time</th>
                                <th scope="col">Price</th>
                                <th></th>
                        </tr>
                        </thead>
                        <tbody>

                            <% 
                            
                            var total = 0;

                            for (var i=0; i<basket.basket.length; i++){ %>

                            <tr class="table-light basket-journey">
                                <th scope="row"><%= i+1 %></th>
                                <td><%= basket.basket[i].departure + ' / ' + basket.basket[i].arrival%></td>
                                <td><%= dateFormat(basket.basket[i].date)%></td>
                                <td><%= basket.basket[i].departureTime%></td>
                                <td><%= basket.basket[i].price%>€</td>
                                <td><a href="/delete-trip?position=<%=i%>"><button class="btn btn-outline-info btn-sm" name="button"><i class="far fa-trash-alt"></i></button></a></td>

                            </tr>

                            <% 
                        
                            total += basket.basket[i].price

                            } %>

                            <tr class="table-danger">
                                <th scope="row">Total</th>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><%= total %>€</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
        
            </div>  
            <div class="row">
                <div class="col-12 text-right">
                    <a href="/home"><h6>Continuer mes achats </h6></a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmModal">
                        Confirm
                      </button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Confirmation de votre commande</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                        Nous vous remercions de votre commande ! :) 
                        </div>
                        <div class="modal-footer">
                        <button href="/checkout-complete?redirect=last-trips" type="button" class="btn btn-secondary" data-dismiss="modal">Voir mon historique</button>
                        <button href="/checkout-complete?redirect=search-journey" type="button" class="btn btn-danger">Revenir à la page d'accueil</button>
                        </div>
                    </div>
                    </div>
                </div>
            </div>


        </div>

    </div>

    <!-- Extension jquery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Noyau JavaScript de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>