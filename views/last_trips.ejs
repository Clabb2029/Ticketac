<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Last Trips</title>
</head>
<body>

<%- include('header'); %>

<div class="col-8 mx-auto">
    <h2>My last trips :</h2>
    <table class="table table-borderless">
        <thead>
        <tr class="table-light">
            <th scope="col">Date</th>
            <th scope="col">Journey</th>
            <th scope="col">Departure time</th>
            <th scope="col">Price</th>
        </tr>
        </thead>
        <tbody>
        <% for (let i = 0; i < userTrips.last_trips.length; i++) {%>
            <% let time;
                if (parseInt(userTrips.last_trips[i].departureTime.replace(':', '')) > 1200)
                    time = 'pm'
                else
                    time = 'am'
                %>
        <tr class="table-light">
            <td scope="row"><%= dateFormat(userTrips.last_trips[i].date) %></td>
            <td><%= `${userTrips.last_trips[i].departure} / ${userTrips.last_trips[i].arrival}` %></td>
            <td><%= userTrips.last_trips[i].departureTime + time %></td>
            <td><%= userTrips.last_trips[i].price %>â‚¬</td>
        </tr>
        <% } %>
        </tbody>
    </table>

    <div class="col-12 d-flex justify-content-end">
        <a href="/home"><button type="button" class="btn btn-danger">
            Home
          </button></a>
    </div>

</div>

<footer>
    <p>&#169; 2019 LaCapsule</p>
</footer>

<!-- Extension jquery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<!-- Noyau JavaScript de Bootstrap -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>